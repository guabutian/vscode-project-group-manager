{
  "name": "project-group-manager",
  "displayName": "Project Group Manager",
  "description": "批量打开项目组（支持 Dev Container、SSH Remote、WSL 等）",
  "version": "0.0.1",
  "publisher": "your-publisher-name",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "project group",
    "dev container",
    "remote",
    "ssh",
    "wsl",
    "docker",
    "project manager",
    "workspace",
    "批量打开",
    "项目组",
    "远程开发"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "devContainerGroups.refresh",
        "title": "刷新项目列表",
        "icon": "$(refresh)",
        "category": "Project Groups"
      },
      {
        "command": "devContainerGroups.openSelected",
        "title": "打开选中的项目",
        "icon": "$(folder-opened)",
        "category": "Project Groups"
      },
      {
        "command": "devContainerGroups.saveAsGroup",
        "title": "保存为组",
        "icon": "$(save)",
        "category": "Project Groups"
      },
      {
        "command": "devContainerGroups.openGroup",
        "title": "打开组",
        "category": "Project Groups"
      },
      {
        "command": "devContainerGroups.deleteGroup",
        "title": "删除组",
        "icon": "$(trash)",
        "category": "Project Groups"
      },
      {
        "command": "devContainerGroups.reloadAllWindows",
        "title": "重载所有窗口",
        "icon": "$(debug-restart)",
        "category": "Project Groups"
      },
      {
        "command": "devContainerGroups.toggleProject",
        "title": "切换项目选中状态",
        "category": "Project Groups"
      },
      {
        "command": "devContainerGroups.selectAll",
        "title": "全选",
        "icon": "$(check-all)",
        "category": "Project Groups"
      },
      {
        "command": "devContainerGroups.clearSelection",
        "title": "清除选择",
        "icon": "$(clear-all)",
        "category": "Project Groups"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "projectGroups",
          "title": "Project Groups",
          "icon": "$(folder-library)"
        }
      ]
    },
    "views": {
      "projectGroups": [
        {
          "id": "projectGroupsProjectsView",
          "name": "项目列表"
        },
        {
          "id": "projectGroupsGroupsView",
          "name": "保存的组"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "devContainerGroups.refresh",
          "when": "view == projectGroupsProjectsView",
          "group": "navigation@1"
        },
        {
          "command": "devContainerGroups.selectAll",
          "when": "view == projectGroupsProjectsView",
          "group": "navigation@2"
        },
        {
          "command": "devContainerGroups.clearSelection",
          "when": "view == projectGroupsProjectsView",
          "group": "navigation@3"
        },
        {
          "command": "devContainerGroups.openSelected",
          "when": "view == projectGroupsProjectsView",
          "group": "navigation@4"
        },
        {
          "command": "devContainerGroups.saveAsGroup",
          "when": "view == projectGroupsProjectsView",
          "group": "navigation@5"
        },
        {
          "command": "devContainerGroups.reloadAllWindows",
          "when": "view == projectGroupsProjectsView",
          "group": "navigation@6"
        }
      ],
      "view/item/context": [
        {
          "command": "devContainerGroups.openGroup",
          "when": "view == projectGroupsGroupsView && viewItem == group",
          "group": "inline@1"
        },
        {
          "command": "devContainerGroups.deleteGroup",
          "when": "view == projectGroupsGroupsView && viewItem == group",
          "group": "inline@2"
        }
      ]
    },
    "configuration": {
      "title": "Project Group Manager",
      "properties": {
        "projectGroups.openDelay": {
          "type": "number",
          "default": 2000,
          "minimum": 0,
          "maximum": 10000,
          "description": "每个项目打开之间的延迟（毫秒）"
        },
        "projectGroups.batchSize": {
          "type": "number",
          "default": 3,
          "minimum": 1,
          "maximum": 10,
          "description": "每批打开的项目数量"
        },
        "projectGroups.batchDelay": {
          "type": "number",
          "default": 10000,
          "minimum": 0,
          "maximum": 60000,
          "description": "批次之间的延迟（毫秒）"
        },
        "projectGroups.projectManagerPath": {
          "type": "string",
          "default": "",
          "description": "Project Manager 配置文件的自定义路径（留空自动检测）"
        },
        "projectGroups.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "显示操作完成通知"
        },
        "projectGroups.autoRefreshOnStartup": {
          "type": "boolean",
          "default": true,
          "description": "启动时自动刷新项目列表"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6",
    "@vscode/test-electron": "^2.3.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/dev-container-group-manager"
  },
  "bugs": {
    "url": "https://github.com/your-username/dev-container-group-manager/issues"
  },
  "homepage": "https://github.com/your-username/dev-container-group-manager#readme",
  "license": "MIT"
}
